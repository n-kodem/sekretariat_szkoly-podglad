<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/btnText"
            android:layout_width="142dp"
            android:layout_height="49dp" android:id="@+id/loadDataButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.108"/>
    <LinearLayout
            android:layout_width="372dp"
            android:layout_height="257dp"
            android:orientation="vertical" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/loadDataButton">
        <ScrollView
                android:id="@+id/layout"
                android:layout_height="match_parent"
                android:scrollbars="horizontal|vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="5dip"
                android:scrollbarStyle="outsideInset"
                android:fillViewport="true">

            <HorizontalScrollView
                    android:id="@+id/horizontalView"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal|vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dip">

                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/itemtable">
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
    <EditText
            android:layout_width="149dp"
            android:layout_height="46dp"
            android:inputType="textUri"
            android:ems="10"
            android:id="@+id/urlContainer"
            app:layout_constraintStart_toEndOf="@+id/loadDataButton" android:layout_marginStart="52dp"
            android:hint="@string/urlHint" app:layout_constraintBottom_toBottomOf="@+id/loadDataButton"
            app:layout_constraintTop_toTopOf="@+id/loadDataButton" app:layout_constraintVertical_bias="1.0"/>
    <Spinner
            android:layout_width="142dp"
            android:layout_height="49dp" android:id="@+id/sortBy"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout" android:layout_marginStart="20dp"
            android:backgroundTint="@color/design_default_color_primary_variant"/>
    <Spinner
            android:layout_width="142dp"
            android:layout_height="49dp" android:id="@+id/orderType"
            android:entries="@array/orderTypeArr" app:layout_constraintStart_toEndOf="@+id/sortBy"
            android:layout_marginStart="52dp" app:layout_constraintBottom_toBottomOf="@+id/sortBy"
            app:layout_constraintTop_toTopOf="@+id/sortBy" app:layout_constraintVertical_bias="0.0"
            android:backgroundTint="@color/design_default_color_primary_dark"/>
    <Spinner
            android:layout_width="142dp"
            android:layout_height="49dp" android:id="@+id/whereItem"
            app:layout_constraintTop_toBottomOf="@+id/sortBy" app:layout_constraintStart_toStartOf="@+id/sortBy"
            app:layout_constraintEnd_toEndOf="@+id/sortBy" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="142dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/valueToFind"
            android:hint="@string/whereClausureHint" app:layout_constraintStart_toEndOf="@+id/whereItem"
            android:layout_marginStart="52dp" app:layout_constraintBottom_toBottomOf="@+id/whereItem"
            app:layout_constraintTop_toTopOf="@+id/whereItem"/>
</androidx.constraintlayout.widget.ConstraintLayout>